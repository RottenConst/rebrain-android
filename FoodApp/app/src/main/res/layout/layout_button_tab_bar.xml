<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:parentTag="android.widget.LinearLayout">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_main"
            android:id="@+id/icon_button_tab"
            android:padding="8dp"
            android:contentDescription="@string/icon_button" android:layout_gravity="center_horizontal"/>
    <TextView
            android:id="@+id/title_button_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Main"
            android:gravity="center_horizontal"
            android:textSize="12sp" android:layout_marginBottom="8dp" android:layout_gravity="center_horizontal"/>
</merge>