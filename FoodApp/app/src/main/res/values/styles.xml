<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/backgroundsplash</item>
    </style>

    <!--Стили текста-->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:color">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextView.Big">
        <item name="android:textAppearance">@style/Text.Big</item>
    </style>

    <style name="TextView.Big.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.Big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Normal">
        <item name="android:textAppearance">@style/Text.Normal</item>
    </style>

    <style name="TextView.Normal.White">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textAppearance">@style/Text.Small</item>
    </style>

    <style name="TextView.Small.Grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextView.Small.Green">
        <item name="android:textColor">@color/green</item>
    </style>

</resources>
